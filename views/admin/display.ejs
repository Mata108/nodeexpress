<%- include('./header.ejs') %>

    <h1 class="mt-5">Display Course</h1>
    <div class="container mt-5">
        <table class="table table-bordered">
            <tr>
                <!-- <th>Id</th> -->
                <th>Name</th>
                <th>Email</th>
                <th>Phone no</th>
                <th>status</th>
                <th>comment</th>
                <th></th>
                <th>action</th>

            </tr>
            <% d.forEach((item)=>{ %>
                <tr>
                    <!-- <td>
                        <%= item.id %>
                    </td> -->
                    <td>
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.email %>
                    </td>
                    <td>
                        <%= item.phone %>
                    </td>
                    <td>
                        <%= item.status %>
                    </td>
                    <td>
                        <form action="/admin/updatestatus/<%= item.id %>" method="post">
                            <textarea name="comment" id="" ></textarea>

                    </td>
                    <td>
                        <button type="submit" name="status" class="btn btn-info" value="Approved">Approved</button>
                        <button type="submit" name="status" class="btn btn-danger" value="Reject">Reject</button>

                        </form>
                    </td>
                    <td>
                        <a href="/admin/view/<%= item.id %>" class="btn btn-info">View</a>
                        <!-- <a href="/edit/<%= item.id %>" class="btn btn-success">edit</a> -->
                        <a href="/admin/coursedelete/<%= item.id %>" class="btn btn-danger">delete</a>
                    </td>
                </tr>
                <% }) %>

        </table>
    </div>

    <% include('../footer.ejs') %>